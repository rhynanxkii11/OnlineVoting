@using Microsoft.AspNetCore.Identity
@model IdentityRole

@{
    ViewData["Title"] = "Create New Role";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container p-4">
     <form method="post" asp-action="Create">
        <h2>@ViewData["Title"]</h2>
        <hr />
         <div class="row col-sm-6">
             <label asp-for="Name" class="form-labell"></label>
             <input asp-for="Name" class="form-control" aria-required="true" />
             <span asp-validation-for="Name" class="text-danger"></span>
         </div>
         <div class="mt-3">
            <button type="submit" class="btn btn-dark">Save</button>
            <a asp-controller="ApplicationRoles" asp-action="Index" class="btn btn-secondary">back</a>
         </div>
     </form>
</div>
