@using Microsoft.AspNetCore.Identity
@model IdentityRole

@{
    ViewData["Title"] = "Update Role";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row bg-white p-4" style="box-shadow: 0 4px 8px rgba(0,0,0,0.3);">
    <form method="post" asp-action="Edit">
        <h2>@ViewData["Title"]</h2>
        <hr />
        <div class="row col-sm-6">
            <label asp-for="Name" class="form-labell"></label>
            <input asp-for="Name" class="form-control" aria-required="true" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mt-3">
            <button type="submit" class="btn btn-success">Update</button>
            <a asp-controller="ApplicationRoles" asp-action="Index" class="btn btn-secondary">back</a>
        </div>
    </form>
</div>

