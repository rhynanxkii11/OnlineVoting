@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>

@{
    ViewData["Title"] = "Application Roles";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container bg-white p-4" style="box-shadow: 0 4px 8px rgba(0,0,0,0.3);">
    <div class="pt-4 pb-2">
        <h3>@ViewData["Title"]</h3>
    </div>
    <hr />
    <div class="my-4">
        <a asp-controller="ApplicationRoles" asp-action="Create" class="btn btn-dark mb-4">Create New Role</a>
    </div>
    <div class="table-responsive">
        <table class="table table-striped" id="example">
            <thead>
                <tr class="bg-secondary">
                    <th>Id</th>
                    <th>Name</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>
                            <a asp-controller="ApplicationRoles" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success">Edit</a>
                            <a asp-controller="ApplicationRoles" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
