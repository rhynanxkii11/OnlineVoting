@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>

@{
    ViewData["Title"] = "Application Roles";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container p-4">
    <h2>@ViewData["Title"]</h2>

    <div class="my-4">
        <a asp-controller="ApplicationRoles" asp-action="Create" class="btn btn-dark mb-4">Create New Role</a>
    </div>
    <table class="table table-striped">
        <thead>
            <tr class="bg-secondary">
                <th>Id</th>
                <th>Name</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>
                        <a asp-controller="ApplicationRoles" asp-action="Details" asp-route-id="@item.Id" class="btn btn-success">Edit</a>
                        <a asp-controller="ApplicationRoles" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
