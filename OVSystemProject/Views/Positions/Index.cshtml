@model IEnumerable<Positions>

@{
    ViewData["Title"] = "List of Positions";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="container bg-white p-4" style="box-shadow: 0 4px 8px rgba(0,0,0,0.3);">
    <div class="pt-4 pb-2">
        <h3>@ViewData["Title"]</h3>
    </div>
    <hr />
    <div class="mb-3 mt-4">
        <a asp-controller="Positions" asp-action="Create" class="btn btn-dark mb-4">Create New Position</a>
    </div>
    <div class="table-responsive">
        <table class="table table-striped p-3" id="example">
            <thead>
                <tr class="bg-secondary">
                    <th style="width: 200px;">Position Id</th>
                    <th style="width: 200px;">Position Name</th>
                    <th style="width: 200px;">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.PositionId</td>
                        <td>@item.PositionName</td>
                        <td class="">
                            <a asp-controller="Positions" asp-action="Details" asp-route-id="@item.PositionId" class="btn btn-primary">View</a>
                            <a asp-controller="Positions" asp-action="Edit" asp-route-id="@item.PositionId" class="btn btn-success">Edit</a>
                            <a asp-controller="Positions" asp-action="Delete" asp-route-id="@item.PositionId" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<script>
    $(document).ready(function () {
        $('example').DataTable();
    });
</script>
