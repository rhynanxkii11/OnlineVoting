@model IEnumerable<Positions>

@{
    ViewData["Title"] = "Candidates";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div class="d-flex justify-content-center w-100 bg-success" style="margin-bottom">
        <h1 style="font-size: 60px; font-weight: 600;" class="text-white">
            ELECTION CANDIDATE
        </h1>
    </div>
    <div class="d-flex justify-content-center w-100 pt-5">
        <div class="row g-3 gap-sm-4">
            @if (Model != null && Model.Any())
            {
                @foreach (var position in Model)
                {
                    <div class="d-flex justify-content-center text-uppercase">
                        <h1 class="text-success">@position.PositionName</h1>
                    </div>
                    
                    @foreach (var candidate in position.Candidates)
                    {
                        <div class="card" style="width: 18rem;">
                            <img src="~/img/candidate/@candidate.Photo" class="card-img-top" alt="candidatePhoto">
                            <div class="card-body">
                                <h5 class="text-uppercase">Name: @candidate.FullName</h5>
                                <h5>Age: @candidate.Age</h5>
                                <h5>Sex: @candidate.Sex</h5>
                            </div>
                            <div class="card-footer text-center">
                                <h5>@candidate.Party</h5>
                            </div>
                        </div>
                    }
                }

            }
            else
            {
                <tr>
                    <td colspan="6" class="text-center">
                        <div>
                            No candidates available.
                        </div>
                    </td>
                </tr>
            }
        </div>
    </div>
</div>