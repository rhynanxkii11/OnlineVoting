@model Candidates

@{
    ViewData["Title"] = "View Candidate";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row bg-white p-4" style="box-shadow: 0 4px 8px rgba(0,0,0,0.3);">
    <div class="col-md-12">
        <form method="post" enctype="multipart/form-data">
            <h3>@ViewData["Title"]</h3>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="d-flex justify-content-center">
                <div class="mb-3 col-lg-3">
                    <img src="~/img/candidate/Photo" style="width: 200px; height: 200px;" />
                </div>
            </div>
            <div class="row g-12">
                <div class="mb-3 col-lg-3">
                    <label class="form-label" asp-for="CandidateId"></label>
                    <input type="text" class="form-control" asp-for="CandidateId" readonly />
                </div>
            </div>
            <div class="row g-4">
                <div class="mb-3 col-lg-3">
                    <label class="form-label" asp-for="FirstName"></label>
                    <input type="text" class="form-control" asp-for="FirstName" readonly />
                </div>
                <div class="mb-3 col-lg-3">
                    <label class="form-label" asp-for="MiddleName"></label>
                    <input type="text" class="form-control" asp-for="MiddleName" readonly />
                </div>
                <div class="mb-3 col-lg-3">
                    <label class="form-label" asp-for="LastName"></label>
                    <input type="text" class="form-control" asp-for="LastName" readonly />
                </div>
                <div class="mb-3 col-lg-3">
                    <label class="form-label" asp-for="NameExtension"></label>
                    <input type="text" class="form-control" asp-for="NameExtension" readonly />
                </div>
            </div>
            <div class="row g-3">
                <div class="mb-3 col-sm-4">
                    <label class="form-label" asp-for="DateOfBirth"></label>
                    <input type="date" class="form-control" asp-for="DateOfBirth" readonly />
                </div>
                <div class="mb-3 col-sm-4">
                    <label class="form-label" asp-for="Age"></label>
                    <input type="number" class="form-control" asp-for="Age" readonly />
                </div>
                <div class="mb-3 col-sm-4">
                    <label class="form-label" asp-for="Sex"></label>
                    <input type="text" class="form-control" asp-for="Sex" readonly />
                </div>
                
            </div>
            <div class="row g-4">
                <div class="mb-3 col-lg-3">
                    <label class="form-label" asp-for="CivilStatus"></label>
                    <input type="text" class="form-control" asp-for="CivilStatus" readonly />
                </div>
                <div class="mb-3 col-lg-3">
                    <label class="form-label" asp-for="Citizenship"></label>
                    <input type="text" class="form-control" asp-for="Citizenship" readonly />
                </div>

                <div class="mb-3 col-lg-3">
                    <label class="form-label">Position</label>
                    <input type="text" class="form-control" asp-for="Positions.PositionName" readonly />
                </div>
                <div class="mb-3 col-lg-3">
                    <label class="form-label" asp-for="Party"></label>
                    <input type="text" class="form-control" asp-for="Party" readonly />
                </div>
            </div>

            <div class="text-center mt-4">
                <a asp-controller="Candidates" asp-action="Index" class="btn btn-secondary">Back</a>
            </div>
        </form>
    </div>
   
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        $(document).ready(function () {
            $('.custom-file-input').on("change", function () {
                var fileName = $(this).val().split("\\").pop();
                $(this).next('.custom-file-label').html(fileName);
            });
        });
    </script>
}


